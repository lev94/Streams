package schiffeVersenken.protocolBinding;

import schiffeVersenken.SVExeption;
import schiffeVersenken.SchiffeVersenkenSender;
import schiffeVersenken.StatusException;

import java.io.DataOutputStream;
import java.io.IOException;
import java.io.OutputStream;

public class StreamBindingSender implements SchiffeVersenkenSender {

    private final DataOutputStream dos;

    public StreamBindingSender(OutputStream os) {
        this.dos = new DataOutputStream(os);
    }


    @Override
    public void doDice() throws StatusException, IOException {
        this.dos.writeInt(StreamBinding.DICE);
        this.dos.writeInt();
    }

    @Override
    public void koordinateSend(int zeile, int spalte) throws StatusException, IOException, SVExeption {
        this.dos.writeInt(StreamBinding.SET);
        this.dos.writeInt(zeile);
        this.dos.writeInt(spalte);

    }

    @Override
    public void kapitulationSend() throws StatusException {

    }

    @Override
    public void bestaetigenreceive(int zahl) throws StatusException, IOException {
        this.dos.writeInt(StreamBinding.BESTAETIGEN);
        this.dos.writeInt(zahl);

    }
}
