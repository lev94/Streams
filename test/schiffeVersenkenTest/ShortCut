package schiffeVersenken;

import machine.*;
import schiffeVersenken.Feld.SVException;

import java.io.IOException;

public class ShortCut implements SchiffeVersenkenSender {
    private SchiffeVersenkenReceive receiver;

    public void setReceiver(SchiffeVersenkenReceive receiver) {
        this.receiver = receiver;
    }

    @Override
    public void sendDice(int random) throws Exception {
        this.receiver.reihenfolgeWuerfelnReceive(random);
    }

    @Override
    public void koordinateSend(int zeile, int spalte) throws StatusException, IOException, SVExeption {
        this.receiver.koordinateReceive(zeile, spalte);
    }

    @Override
    public void kapitulationSend() throws StatusException {
        this.receiver.kapitulationReceive();

    }


    /*@Override
    public void bestaetigenreceive(int zahl) throws StatusException, IOException {
        this.receiver.bestaetigenSend(zahl);
    }*/

    @Override
    public void sendConfirmation(ConfirmationStatus confirm) throws IOException, StatusException, SVException {
        this.receiver.receiveConfirmation(confirm);
    }
}
